<style>
	.section-header {
		display: flex;
		align-items: center;
		gap: 1rem;
		margin-bottom: 4rem;
	}

	.section-number {
		font-family: 'JetBrains Mono', monospace;
		font-size: 1.5rem;
		color: #00ff88;
		font-weight: 600;
	}

	.section-title {
		font-size: 3rem;
		font-weight: 700;
		color: #ffffff;
		margin: 0;
	}

	.projects-grid {
		display: flex;
		flex-direction: column;
		gap: 6rem;
		margin-bottom: 4rem;
	}

	.project-card {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 4rem;
		align-items: center;
		position: relative;
	}

	.project-card.featured {
		background: rgba(255, 255, 255, 0.02);
		border: 1px solid rgba(0, 255, 136, 0.1);
		border-radius: 12px;
		padding: 3rem;
		backdrop-filter: blur(20px);
	}

	.project-card:nth-child(even) .project-content {
		order: 2;
	}

	.project-card:nth-child(even) .project-image {
		order: 1;
	}

	.project-image {
		position: relative;
		border-radius: 8px;
		overflow: hidden;
		box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
		transition: all 0.4s ease;
	}

	.project-image:hover {
		transform: translateY(-10px);
		box-shadow: 0 30px 60px rgba(0, 0, 0, 0.4);
	}

	.project-image img {
		width: 100%;
		height: 300px;
		object-fit: cover;
		transition: transform 0.4s ease;
	}

	.project-image:hover img {
		transform: scale(1.05);
	}

	.project-overlay {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: rgba(0, 0, 0, 0.8);
		display: flex;
		align-items: center;
		justify-content: center;
		opacity: 0;
		transition: opacity 0.3s ease;
	}

	.project-image:hover .project-overlay {
		opacity: 1;
	}

	.project-overlay .project-links {
		display: flex;
		gap: 1rem;
	}

	.project-type {
		font-family: 'JetBrains Mono', monospace;
		color: #00ff88;
		font-size: 0.9rem;
		margin-bottom: 0.5rem;
		text-transform: uppercase;
		letter-spacing: 1px;
	}

	.project-title {
		font-size: 2rem;
		font-weight: 700;
		color: #ffffff;
		margin-bottom: 1rem;
	}

	.project-description {
		margin-bottom: 2rem;
	}

	.project-description p {
		color: #cccccc;
		line-height: 1.7;
		font-size: 1.1rem;
	}

	.project-tech {
		display: flex;
		flex-wrap: wrap;
		gap: 0.75rem;
		margin-bottom: 1.5rem;
	}

	.tech-tag {
		padding: 0.5rem 1rem;
		background: rgba(0, 255, 136, 0.1);
		color: #00ff88;
		border: 1px solid rgba(0, 255, 136, 0.2);
		border-radius: 20px;
		font-size: 0.9rem;
		font-weight: 500;
		font-family: 'JetBrains Mono', monospace;
		transition: all 0.3s ease;
	}

	.tech-tag:hover {
		background: rgba(0, 255, 136, 0.2);
		transform: translateY(-2px);
	}

	.project-links {
		display: flex;
		gap: 1rem;
	}

	.project-link {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 50px;
		height: 50px;
		background: rgba(0, 255, 136, 0.1);
		border: 1px solid rgba(0, 255, 136, 0.3);
		border-radius: 8px;
		color: #00ff88;
		text-decoration: none;
		transition: all 0.3s ease;
	}

	.project-link:hover {
		background: #00ff88;
		color: #000000;
		transform: translateY(-3px);
		box-shadow: 0 10px 20px rgba(0, 255, 136, 0.3);
	}

	.more-projects {
		text-align: center;
	}

	@media (max-width: 768px) {
		.section-title {
			font-size: 2.5rem;
		}

		.projects-grid {
			gap: 4rem;
		}

		.project-card {
			grid-template-columns: 1fr;
			gap: 2rem;
		}

		.project-card.featured {
			padding: 2rem;
		}

		.project-card:nth-child(even) .project-content,
		.project-card:nth-child(even) .project-image {
			order: initial;
		}

		.project-title {
			font-size: 1.5rem;
		}

		.project-image img {
			height: 250px;
		}
	}
</style>