<style>
	.footer {
		background: rgba(10, 10, 10, 0.95);
		backdrop-filter: blur(20px);
		border-top: 1px solid rgba(0, 255, 136, 0.1);
		padding: 4rem 0 2rem;
		margin-top: 6rem;
		position: relative;
	}

	.footer::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		height: 1px;
		background: linear-gradient(90deg, transparent, #00ff88, transparent);
	}

	.footer-content {
		display: flex;
		flex-direction: column;
		gap: 3rem;
	}

	.footer-main {
		display: grid;
		grid-template-columns: 2fr 3fr;
		gap: 4rem;
		align-items: start;
	}

	.footer-brand {
		display: flex;
		flex-direction: column;
		gap: 1.5rem;
	}

	.footer-logo {
		font-size: 2rem;
		font-weight: 700;
		font-family: 'JetBrains Mono', monospace;
	}

	.footer-description {
		color: #cccccc;
		line-height: 1.7;
		font-size: 1rem;
		max-width: 400px;
	}

	.footer-social {
		display: flex;
		gap: 1rem;
	}

	.footer-social-link {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 45px;
		height: 45px;
		background: rgba(0, 255, 136, 0.1);
		border: 1px solid rgba(0, 255, 136, 0.2);
		border-radius: 8px;
		color: #00ff88;
		text-decoration: none;
		transition: all 0.3s ease;
		cursor: none;
	}

	.footer-social-link:hover {
		background: #00ff88;
		color: #000000;
		transform: translateY(-3px);
		box-shadow: 0 10px 20px rgba(0, 255, 136, 0.3);
	}

	.footer-links {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 2rem;
	}

	.footer-section {
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	.footer-title {
		color: #ffffff;
		font-size: 1.1rem;
		font-weight: 600;
		margin-bottom: 0.5rem;
		font-family: 'JetBrains Mono', monospace;
	}

	.footer-nav {
		list-style: none;
		padding: 0;
		margin: 0;
		display: flex;
		flex-direction: column;
		gap: 0.75rem;
	}

	.footer-link {
		color: #cccccc;
		text-decoration: none;
		transition: all 0.3s ease;
		position: relative;
		font-size: 0.95rem;
		cursor: none;
	}

	.footer-link::before {
		content: '▶';
		position: absolute;
		left: -15px;
		color: #00ff88;
		opacity: 0;
		transition: opacity 0.3s ease;
		font-size: 0.8rem;
	}

	.footer-link:hover {
		color: #00ff88;
		padding-left: 15px;
	}

	.footer-link:hover::before {
		opacity: 1;
	}

	.footer-bottom {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding-top: 2rem;
		border-top: 1px solid rgba(255, 255, 255, 0.05);
	}

	.footer-copyright p,
	.footer-credits p {
		color: #999999;
		font-size: 0.9rem;
		margin: 0;
		font-family: 'JetBrains Mono', monospace;
	}

	.highlight {
		color: #00ff88;
		font-weight: 500;
	}

	@media (max-width: 768px) {
		.footer {
			padding: 3rem 0 2rem;
		}

		.footer-main {
			grid-template-columns: 1fr;
			gap: 3rem;
		}

		.footer-links {
			grid-template-columns: 1fr;
			gap: 2rem;
		}

		.footer-bottom {
			flex-direction: column;
			gap: 1rem;
			text-align: center;
		}

		.footer-social {
			justify-content: center;
		}
	}

	@media (max-width: 480px) {
		.footer-brand {
			text-align: center;
		}

		.footer-section {
			text-align: center;
		}
	}
</style>